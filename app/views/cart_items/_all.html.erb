<div class="modal-body">
    <div id="all-cart-items">
    <% cart_items.each do |ci|%>
        <hr>
        <%= image_tag ci.product.images.first, style: "width: 100px;height: 100px;" %>
        <%= ci.product.model %><br>
        <div class="btn-group" role="group" aria-label="Basic outlined example">
        <%= link_to "-", decrement_cart_item_path(ci), class:"btn btn-outline-primary", remote: true%>
        <%= link_to "+", increment_cart_item_path(ci), class:"btn btn-outline-primary", remote: true%>
        </div>
        <div id = "QuantityStatus<%=ci.id%>">
        Quantity: <%= ci.quantity %><br>
        Price: <%= ci.product.price * ci.quantity%><br>
        </div>
    <% end %>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <%= link_to "Proceed To Buy", new_order_path , class: "btn btn-primary"%>
</div>